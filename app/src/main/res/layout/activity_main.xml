<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <TextView
        android:id="@+id/statusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginBottom="16dp" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:stretchColumns="*">

        <TableRow>
            <Button
                android:id="@+id/main_activity_button00"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:textSize="24sp" />
            <Button
                android:id="@+id/main_activity_button01"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:textSize="24sp" />
            <Button
                android:id="@+id/main_activity_button02"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:textSize="24sp" />
        </TableRow>

        <TableRow>
            <Button
                android:id="@+id/main_activity_button10"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:textSize="24sp" />
            <Button
                android:id="@+id/main_activity_button11"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:textSize="24sp" />
            <Button
                android:id="@+id/main_activity_button12"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:textSize="24sp" />
        </TableRow>

        <TableRow>
            <Button
                android:id="@+id/main_activity_button20"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:textSize="24sp" />
            <Button
                android:id="@+id/main_activity_button21"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:textSize="24sp" />
            <Button
                android:id="@+id/main_activity_button22"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:textSize="24sp" />
        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/main_activity_reset_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset Game"
        android:layout_marginTop="16dp" />

</LinearLayout>
